@model IEnumerable<WebApplication3.Models.registration>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2 style="margin-top:100px">Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.registration_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.admin_.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.course.Course_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.student.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.registration_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.admin_.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.course.Course_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.student.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
